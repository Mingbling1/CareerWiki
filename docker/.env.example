# ==========================================
# Empliq - Docker Environment Variables
# ==========================================
# Copia este archivo a .env y ajusta los valores

# Supabase (opcional para desarrollo local)
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# PostgreSQL Local
POSTGRES_USER=empliq
POSTGRES_PASSWORD=empliq_dev_password
POSTGRES_DB=empliq
DATABASE_URL=postgresql://empliq:empliq_dev_password@postgres:5432/empliq

# Node Environment
NODE_ENV=development

# Google OAuth (required for authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
